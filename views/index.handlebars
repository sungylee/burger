<div class ="container">

  <div class="row">
   <div class="col-md-12 text-center">
    <h1>EAT DA BURGER!</h1>
      <img src="/assets/img/inandout.jpg" alt="burger" class="burgerImg" />
   </div>
  </div>

  <div class="row">
    <div class="col-md-6 text-center">
     <h2>Burgers Available!</h2>
     <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
     </ul>
  </div>

  <div class="col-md-6 text-center">
    <h2>Burgers Devoured!</h2>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
      </ul>
   </div>
  </div>

  <div class="row">
   <div class="col-md-12 text-center">
     <h2>Add a Burger</h2>
      <form class="create-form">
      <div class="form-group">
       <label for="ca">Burger Name:</label>
       <input type="text" id="ca" name="name">
      </div>
      <button type="submit">Add Burger you want to eat!</button>
      </form>

    </div>

  </div>

</div>
